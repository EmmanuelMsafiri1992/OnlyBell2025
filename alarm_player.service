[Unit]
Description=BellNews Alarm Player Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/bellapp
ExecStart=/usr/bin/python3 /root/bellapp/alarm_player.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
